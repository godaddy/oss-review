{
  "name": "oss-review",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for open source release readiness reviews. Scans repositories for secrets, license violations, security vulnerabilities, and sensitive internal references customisable to your organization.",
  "author": "GoDaddy Operating Company, LLC",
  "contributors": [
    "Arnout Kazemier",
    "Sambhav Gore"
  ],
  "type": "module",
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "oss",
    "open-source",
    "security",
    "secrets",
    "license",
    "sbom",
    "vulnerability",
    "compliance",
    "secretlint",
    "npm-audit",
    "claude",
    "ai"
  ],
  "homepage": "https://github.com/godaddy/oss-review#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/godaddy/oss-review.git"
  },
  "bugs": {
    "url": "https://github.com/godaddy/oss-review/issues"
  },
  "bin": {
    "oss-review": "./dist/bin/cli.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup-node",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "test": "node --test --experimental-test-coverage 'packages/**/*.test.ts'",
    "test:watch": "node --test --watch 'packages/**/*.test.ts'"
  },
  "files": [
    "bin",
    "dist",
    "packages"
  ],
  "exports": {
    "./mcp": {
      "types": "./dist/packages/mcp/index.d.ts",
      "import": "./dist/packages/mcp/index.js"
    },
    "./advisory": {
      "types": "./dist/packages/advisory/index.d.ts",
      "import": "./dist/packages/advisory/index.js"
    },
    "./config": {
      "types": "./dist/packages/config/index.d.ts",
      "import": "./dist/packages/config/index.js"
    },
    "./resolver": {
      "types": "./dist/packages/resolver/index.d.ts",
      "import": "./dist/packages/resolver/index.js"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@secretlint/core": "^11.2.5",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "commander": "^12.1.0",
    "diagnostics": "^3.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.9",
    "assume": "^2.3.0",
    "@secretlint/secretlint-rule-github": "^11.2.5",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
